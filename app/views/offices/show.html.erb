<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <h3 class="mt-3">Cargo</h3>
    </div>
    <div class="col-3 text-end">
      <%= link_to "", new_office_path, class: 'mt-3 btn btn-outline-primary bi bi-plus' %>
    </div>
    <%= render @office %>

    <div>
      <%= link_to "Editar", edit_office_path(@office), class: "btn btn-primary" %>
      <%= link_to "Voltar", offices_path, class: "btn btn-primary" %>
      <%= button_to "Apagar", @office, method: :delete, class: "mt-2 btn btn-danger" %>
    </div>
  </div>
</div>
