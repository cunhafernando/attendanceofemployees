<div class="modal modal-signin position-fixed d-block bg-white py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="rol mt-2 ms-5 me-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-11">
                    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="4" aria-label="Slide 5"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="5" aria-label="Slide 6"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="6" aria-label="Slide 7"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="7" aria-label="Slide 8"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="8" aria-label="Slide 9"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="9" aria-label="Slide 10"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="10" aria-label="Slide 11"></button>
                            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="11" aria-label="Slide 12"></button>
                        </div>
                        <div class="carousel-inner">
                            <%= render '/register/slide1_diurno' %>
                            <%= render '/register/slide2_diurno' %>
                            <%= render '/register/slide3_diurno' %>
                            <%= render '/register/slide4_diurno' %>
                            <%= render '/register/slide5_diurno' %>
                            <%= render '/register/slide6_diurno' %>
                            <%= render '/register/slide1_noturno' %>
                            <%= render '/register/slide2_noturno' %>
                            <%= render '/register/slide3_noturno' %>
                            <%= render '/register/slide4_noturno' %>
                            <%= render '/register/slide5_noturno' %>
                            <%= render '/register/slide6_noturno' %>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-1">
                    <div class="d-grid gap-0">
                        <button type="button" class="btn btn-success btn-sm mb-1"><strong>Presença</strong><br><%= @presenca_count %></button>
                        <button type="button" class="btn btn-danger btn-sm mb-1"><strong>Falta</strong><br><%= @falta_count %></button>
                        <button type="button" class="btn btn-warning btn-sm mb-1"><strong>Atraso</strong><br><%= @atrasado_count %></button>
                        <button type="button" class="btn btn-dark btn-sm mb-1"><strong>Atestado</strong><br><%= @atestado_count %></button>
                        <button type="button" class="btn btn-primary btn-sm mb-1"><strong>INSS</strong><br><%= @inss_count %></button>
                        <button type="button" class="btn btn-info btn-sm mb-1"><strong>Férias</strong><br><%= @ferias_count %></button>
                        <button type="button" class="btn btn-green btn-sm mb-1"><strong>Folga</strong><br><%= @folga_count %></button>
                        <button type="button" class="btn btn-secondary btn-sm mb-1"><strong>Licença</strong><br><%= @licenca_count %></button>
                        <button type="button" class="btn btn-purple btn-sm mb-1"><strong>Vacância</strong><br><%= @vacancia_count %></button>
                        <button type="button" class="btn btn-orange btn-sm mb-1"><strong>Antecipada</strong><br><%= @antecipada_count %></button>
                        <button type="button" class="btn btn-indigo btn-sm mb-1"><strong>UPA</strong><br><%= @upa_count %></button>
                        <button type="button" class="btn btn-pink btn-sm mb-1"><strong>HEGV</strong><br><%= @hegv_count %></button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>