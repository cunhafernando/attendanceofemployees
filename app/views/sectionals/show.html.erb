  <div class="row">
    <div class="col-9">
      <h3 class="mt-3">Local</h3>
    </div>
    <div class="col-3 text-end">
      <%= link_to "", new_sectional_path, class: 'mt-3 btn btn-outline-primary bi bi-plus' %>
    </div>
