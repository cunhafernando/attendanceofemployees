<%= form_with(model: sector) do |form| %>
  <% if sector.errors.any? %>
    <div class="container">
        <div class="row">
          <div class="col alert alert-success alert-dismissible fade show mt-3" role="alert">
            <strong>Encontramos <%= pluralize(sector.errors.count, "error") %> ao salvar o formul√°rio.</strong>

            <ul>
              <% sector.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
    </div>
  <% end %>

  <div class="row g-3 mb-2">
    <div class="col-md-4">
      <strong><%= form.label "Setor:", class: "form-label" %></strong>
      <%= form.text_field :name, class: "form-control"  %>
    </div>

    <div>
      <%= form.submit "Salvar", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
