<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <h3 class="mt-3">Registro de Efetivos</h3>
    </div>
    <div class="col-3 text-end">
      <%= link_to "", new_timesheet_path, class: 'mt-3 btn btn-outline-primary bi bi-plus' %>
    </div>
    <h1></h1>

    <div id="timesheets">
      <table id="table" data-height="500" data-toggle="table" data-search="true" data-height="500" data-pagination="true" data-search-accent-neutralise="true" class="table table-bordered table-striped" >
        <thead>
          <tr>
            <th scope="col">Nome do setor</th>
            <th scope="col">Data</th>
            <th scope="col">Data de atualização</th>
            <th scope="col">Hora de atualização</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @timesheets.each do |timesheet|  %>
            <tr>
              <td><%= timesheet.sector.name %></td>
              <td><%= timesheet.created_at.strftime("%d/%m/%Y") %> | <%= timesheet.created_at.strftime("%H:%M") %></td>
              <td><%= timesheet.updated_at.strftime("%d/%m/%Y") %></td>
              <td><%= timesheet.updated_at.strftime("%H:%M") %></td>
              <td><%= link_to '', timesheet, class: "btn btn-primary bi bi-eye" %><!--<%= link_to '', edit_timesheet_path(timesheet), class: "btn btn-primary bi bi-pencil-square" %>--></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
